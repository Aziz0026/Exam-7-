<div class="row">
  <div class="col-sm-12">
    <h1>Tests <%= link_to 'New Test', new_test_path, class: 'btn btn-success' %></h1>
  </div>
</div>

<hr/>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Link</th>
    <th>Questions#</th>
    <th>Results#</th>
    <th>Actions</th>
  </tr>

  <% @tests.each do |test| %>
      <tr>
        <td><%= link_to test.name, test_path(test) %></td>
        <td>Link</td>
        <td>Questions</td>
        <td>Result</td>
        <td>
          <%= link_to 'Edit', edit_test_path(test)%>
          <%= link_to 'Delete', test_path(test),
                      method: :delete,
                      data: {confirm: 'Do you want to remove this test?'} %>
        </td>
      </tr>
  <% end %>

</table>
