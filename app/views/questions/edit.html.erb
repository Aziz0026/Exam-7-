<div class="row">
  <div class="col-sm-12">
    <h1> Edit your question</h1>
  </div>
</div>

<hr/>

<%= form_for @question, html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group <%= 'has-error' if @question.errors[:name].any? %>">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @question, field_name: :name %>
      </div>
    </div>

    <div class="col-sm-10">
      <%= f.hidden_field :test_id, :value => params[:format] %>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>